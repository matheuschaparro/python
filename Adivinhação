print("**********\nBem vindo ao jogo de adivinhação\n**********")

import random


print=("Nível: Fácil(1) Médio(2) Difícil(3)")
nivel=int(input("Defina o nível:"))

if(nivel==1):
    total_de_tentativas=20
else:
    if(nivel==2):
        total_de_tentativas=10
    elif(nivel==3):
        total_de_tentativas=5

        print(total_de_tentativas)



numero_secreto= random.randrange(1, 101)
pontos= 1000


rodada=1


while(total_de_tentativas>0):


    chute_str = input("Digite um número de 1 a 100: ")



    print("Você digitou: ",chute_str)

    chute=int(chute_str)


    if(chute<1 or chute>100):
        print("Você tem que digitar um número entre 1 e 100")
        continue

#aqui vai as possibilidades de chutes

    acertou=chute==numero_secreto
    menor=chute<numero_secreto
    maior=chute>numero_secreto



    if(acertou):
        print("Você acertou, parabéns!!!\nVocê é bom nisso")
        break

    else:
        if(menor):
            print("Seu chute foi menor que o número secreto")
        elif(maior):
            print("Seu chute foi maior que o número secreto")
            #nunca desanime Matheus, uma hora a tua hora vai chegar!!!

            pontos_perdidos= abs(numero_secreto - chute)
            pontos= pontos - pontos_perdidos

        print("Tentaiva {} de {}".format(rodada, total_de_tentativas))

    total_de_tentativas = total_de_tentativas - 1
    rodada=rodada + 1

print("Fim de jogo\nVocê fez {}".format(pontos))
